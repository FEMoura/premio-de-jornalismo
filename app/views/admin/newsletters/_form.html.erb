<%= simple_form_for [:admin, @newsletter], remote: true do |f| %>
  <%= f.error_notification %>
    <div class="col-sm-10">
      <%= f.input :email, label: false, placeholder: 'email@exemplo.com' %>
    </div>
    <div class="col-sm-2">
      <%= f.button :submit, class: 'btn btn-default btn btn-white' %>
    </div>
<% end %>
