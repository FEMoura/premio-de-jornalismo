<%= simple_form_for [:restrict, @proposal] do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :category, as: :select, collection: ['Reportagem de TV', 'Jornalismo impresso / Texto', 'Jornalismo impresso / Imagem', 'Radiojornalismo', 'Webjornalismo (Texto, imagem, vídeo)', 'Reportagem cinematográfica', 'Estudante', 'Categoria Especial do Bicentenário de Alagoas'], prompt: "Selecione a categoria..." %>
      <%= f.input :category%>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>